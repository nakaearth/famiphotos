h1 グループ一覧
= link_to 'グループ追加', new_group_path, method: :get
= paginate @groups

.group_list
  table
    tr
    - @groups.each do |group|
      .group_div
        span id="group_#{group.id}"
          = group.name
          br/
          | 作成日付 #{group.created_at_ymd}
          br/
        br/
        = link_to '詳細', group_path(group)
        | &nbsp;&nbsp; | &nbsp;&nbsp; #{ link_to '削除', group_path(group), method: :delete,  data: { confirm: '削除しますか？'} }
